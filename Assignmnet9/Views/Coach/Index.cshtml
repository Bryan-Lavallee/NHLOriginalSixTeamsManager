@model IEnumerable<Assignmnet9.Controllers.CoachBase>

@{
    ViewBag.Title = "Index";
}

<h2>Coaches for teams of the Original Six @DateTime.Now.AddYears(-1).Year/@DateTime.Now.Year</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TeamName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.WinPercentage)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NumberOfGamesCoached)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.YearsCoached)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TeamName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.WinPercentage)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NumberOfGamesCoached)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.YearsCoached)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.CoachId }) |
            @Html.ActionLink("Details", "Details", new { id=item.CoachId }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.CoachId })
        </td>
    </tr>
}

</table>
